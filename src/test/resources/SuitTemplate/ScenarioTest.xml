<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="ScenarioTest" verbose="1" parallel="tests">

    <test name="ScenarioTest_chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="HangTester.nopCommerce.Test.ScenarioTest">
                <methods>
                    <include name="scenarioTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="ScenarioTest_edge">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="HangTester.nopCommerce.Test.ScenarioTest">
                <methods>
                    <include name="scenarioTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>

